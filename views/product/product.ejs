    <style>
        .container
        {
            padding-top: 6rem;
        }

       .product
       {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
       }

       .product >  div:nth-child(1)
       {
            width: 50%;
       }

       .product >  div:nth-child(2)
       {
            width: 50%;
            background-color: white;
            box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.3);
            border-radius: .4rem;
            padding: 1rem;
            font-family: 'Montserrat', sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
       }

       .product > div:nth-child(2) h2
       {
            font-family: 'Montserrat', sans-serif;
            font-weight: 600;
            font-size: 1.6rem;
       }

       .product >  div:nth-child(2) ul
       {
            list-style-type: none;
            margin: 0;
            padding: 0;
            padding: .5rem;
            width: calc(100% - 1rem);
            background-color: rgba(241, 10, 118, 0.212);
            border: 1px solid rgb(241, 10, 118);
            border-radius: .4rem;
            margin: 1rem 0;
       }


       .product img
       {
            width: 100%;
            height: auto;
            box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.3);
            border-radius: .4rem;
       }

       .product div:nth-child(3) h3
       {
            font-size: 2em;
       }

       .product > div:nth-child(2) > div
       {
            height: 52%;
            display: flex;
            flex-direction: column;
            justify-content: end;
       }

       .product div:nth-child(3) > div:nth-child(2) 
       {
            display: flex;
            justify-content: space-between;
            gap: 1rem;
       }    

       .product > div:nth-child(2) > div > div:nth-child(2) > button:nth-child(1) 
       {
            width: 100%;
            padding: .5rem;
            border: none;
            outline: none;
            background-color: black;
            color: white;
            font-weight: 900;
            border-radius: .4rem;
            font-size: 1.5rem;
            cursor: pointer;
            transition: .3s ease;
       }

       .product > div:nth-child(2) > div > div:nth-child(2) > button:active
       {
            background-color: rgb(119, 119, 119);
       }

       .description
       {
            margin-bottom: 1rem;
       }

       .description > h3
       {
            margin-bottom: 1rem;   
       }

       .nbr_inp
       {
            display: flex;
            align-items: stretch;
            height: 100%;
            border-radius: .4rem;
            outline: 3px solid black;
       }

       .nbr_inp input
       {
            border: none;
            outline: none;
       }

       .nbr_inp button
       {
            display: flex;
            align-items: center;
            height: 100%;
            padding: .2rem;
            background-color: transparent;
            border: none;
            outline: none;
            cursor: pointer;
            font-size: 2rem;
       }

       .reviews
       {
            margin-bottom: 4rem;
       }

       .reviews > h3
       {
            margin-bottom: 1rem;
       }

       .reviews > button
       {
            background-color: black;
            color: white;
            border-radius: .4rem;
            padding: .5rem;
            border: none;
            outline: none;
            font-size: 1.5rem;
            font-weight: 600;
            cursor: pointer;
            margin-bottom: 1rem;
            box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.3);
       }

       .reviews > div
       {
            width: 100%;   
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
       }

       .review-card
       {
            background-color: white;
            padding: .5rem;
            border-radius: .4rem;
            box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.3);
            height: 5rem;
            width: calc(50% - 2rem);
            overflow: auto;
       }

       .review-card h3
       {
            margin-bottom: .5rem;
       }



       @media only screen and (max-width: 600px) 
        {
            .container
            {
                padding-top: 1rem;
            }

            .product
            {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }

            .product >  div:nth-child(1)
            {
                width: calc(100% - 1rem);
            }

            .product >  div:nth-child(2)
            {
                width: calc(100% - 3rem);
            }

            .product > div:nth-child(2) h2
            {
                font-family: 'Montserrat', sans-serif;
                font-weight: 600;
                font-size: 1.2rem;
            }

            .description
            {
                display: flex;
                justify-content: center;
                flex-direction: column;
                padding: 0 .5rem;
                margin-bottom: 1rem;
            }

            .reviews
            {
                padding: 0 .5rem;
            }

            .reviews > div
            {
                width: 100%;   
                display: flex;
                gap: 1rem;
                justify-content: center;
            }

            .review-card
            {
                width: 100%;
            }
        }

        .most-ordered-section 
        {
            padding: 0;
            padding-bottom: 1rem;
        }

        .hover-container
        {
            display: none;
            flex-direction: column;
            gap: .5rem;
        }

        .hover-container > span
        {
            cursor: pointer;
            text-decoration: underline;
        }

        .hover-container > textarea
        {
            border: none;
            padding: .5rem;
            border: 3px solid black;
            border-radius: .4rem;
            resize: none;
        }

        .hover-container > button
        {
            background-color: black;
            color: white;
            border-radius: .4rem;
            padding: .5rem;
            border: none;
            outline: none;
            font-size: 1.5rem;
            font-weight: 600;
            cursor: pointer;
        }
    </style>
</head>
