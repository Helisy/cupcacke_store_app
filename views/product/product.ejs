       }

       .nbr_inp
       {
            display: flex;
            align-items: stretch;
            height: 100%;
            border-radius: .4rem;
            outline: 3px solid black;
       }

       .nbr_inp input
       {
            border: none;
            outline: none;
       }

       .nbr_inp button
       {
            display: flex;
            align-items: center;
            height: 100%;
            padding: .2rem;
            background-color: transparent;
            border: none;
            outline: none;
            cursor: pointer;
            font-size: 2rem;
       }

       @media only screen and (max-width: 600px) 
        {
            .container
            {
                padding-top: 1rem;
            }

            .product
            {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }

            .product >  div:nth-child(1)
            {
                width: calc(100% - 1rem);
            }

            .product >  div:nth-child(2)
            {
                width: calc(100% - 3rem);
            }

            .product > div:nth-child(2) h2
            {
                font-family: 'Montserrat', sans-serif;
                font-weight: 600;
                font-size: 1.2rem;
            }

            .description
            {
                display: flex;
                justify-content: center;
                flex-direction: column;
                padding: 0 .5rem;
                margin-bottom: 1rem;
            }
        }

        .most-ordered-section 
        {
            padding: 0;
            padding-bottom: 1rem;
        }
    </style>
