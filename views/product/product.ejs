            box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.3);
            border-radius: .4rem;
       }

       .product div:nth-child(3) h3
       {
            font-size: 2em;
       }

       .product > div:nth-child(2) > div
       {
            height: 52%;
            display: flex;
            flex-direction: column;
            justify-content: end;
       }

       .product div:nth-child(3) > div:nth-child(2) 
       {
            display: flex;
            justify-content: space-between;
            gap: 1rem;
       }    

       .product > div:nth-child(2) > div > div:nth-child(2) > button:nth-child(1) 
       {
            width: 100%;
            padding: .5rem;
            border: none;
            outline: none;
            background-color: black;
            color: white;
            font-weight: 900;
            border-radius: .4rem;
            font-size: 1.5rem;
            cursor: pointer;
            transition: .3s ease;
       }

       .product > div:nth-child(2) > div > div:nth-child(2) > button:active
