    <script>
        const params = window.location.pathname.split('/');

        const main_image = document.querySelector('#main_image');
        const product_title = document.querySelector('#product_title');
        const product_ingredients = document.querySelector('#product_ingredients');
        const product_price = document.querySelector('#product_price');
        const product_description = document.querySelector('#product_description');
        const add_review = document.querySelector("#add_review");
        const make_review = document.querySelector("#make_review");
        const review_body = document.querySelector("#review_body");

        const nbr_inp = document.querySelector('.nbr_inp'); 
       

        const add_cart = document.querySelector('#add_cart'); 

        async function init(){
            var cupcake = await fetchInfo(`/api/v1/cupcake/${params[2]}`);

            main_image.outerHTML = `<img src="${cupcake.data.cover_image}" alt="">`
            product_title.innerHTML = cupcake.data.name;

            product_ingredients.innerHTML = `
                <li><b>Massa: </b>${cupcake.data.dough.name}</li>
                <li><b>Cobertura: </b>${cupcake.data.cover.name}</li>
                <li><b>Recheio: </b>${cupcake.data.filling.name}</li>
                <li><b>Decoração: </b>${cupcake.data.decoration.name}</li>
            `;

            product_price.innerHTML = `<h3>${formatter.format(cupcake.data.selling_price)}</h3>`;

            product_description.innerHTML = cupcake.data.description;


            var reviews = await fetchInfo(`/api/v1/cupcake/${params[2]}/review`);
            reviews = reviews.data;

            for (let i = 0; i < reviews.length; i++) {
                review_body.innerHTML += `
                <div class="review-card">
                    <h3>${reviews[i].first_name}</h3>
                    <p>${reviews[i].review}</p>
                </div>
                `;
            }           
        }

        init();

        add_review.children[2].addEventListener('click', async e => {
            const response = await postData(`/api/v1/cupcake/${params[2]}/review`, "post", {review: add_review.children[1].value});
            
            if(response.error == true && response.message.includes("order")){
                popup.style.display = "unset";
                popup.children[0].innerHTML = "Realize um pedido para poder avaliar."
            }else if(response.error == true && response.message.includes("reviwed")){
                popup.style.display = "unset";
                popup.children[0].innerHTML = "Você ja fez uma avaliação."
            }else if(response.code == 403){
                popup.style.display = "unset";
                popup.children[0].innerHTML = "Você precisa estar logado para avaliar esse produto."
            }else{
                window.location.reload();
            }
        });

        add_cart.addEventListener('click', e => {
            const cart_items = localStorage.getItem("cart_items");

            var newCart = JSON.parse(cart_items);

            if(!newCart){
                newCart = []
                newCart.push({product_id: params[2], quantity: nbr_inp.children[1].value});
            }else if(newCart.length < 1){
                newCart.push({product_id: params[2], quantity: nbr_inp.children[1].value});
            }else{
                newCart = JSON.parse(cart_items);
                for (let i = 0; i < newCart.length; i++) {
                    if(newCart[i].product_id == params[2]){
                        newCart[i].quantity = nbr_inp.children[1].value;
                        break
                    }

                    if(i == newCart.length - 1){
                        newCart.push({product_id: params[2], quantity: nbr_inp.children[1].value});
                    }
                }
            }

            newCart = Array.from(new Set(newCart.map(JSON.stringify))).map(JSON.parse);

            localStorage.setItem("cart_items", JSON.stringify(newCart));
            loadCart();
        });
    
        nbr_inp.children[1].value = 1;
        nbr_inp.children[0].addEventListener('click', e => {
            if(nbr_inp.children[1].value == ''){
                nbr_inp.children[1].value = 1
            }

            nbr_inp.children[1].value--;

            if(nbr_inp.children[1].value < 1){
                nbr_inp.children[1].value = 1
            }
        });

        nbr_inp.children[2].addEventListener('click', e => {
            if(nbr_inp.children[1].value == ''){
                nbr_inp.children[1].value = 1
            }

            nbr_inp.children[1].value++;

            if(nbr_inp.children[1].value > 50){
                nbr_inp.children[1].value = 50
            }
        });

        
        make_review.addEventListener('click', e => {
            add_review.style.display = "flex";
        });

        add_review.children[0].addEventListener('click', e => {
            add_review.style.display = "none";
        });

        loadCart();
    </script>
