    <style>
        .banner
        {
            position: relative;
            display: flex;
            overflow: hidden;
        }

        .banner > img
        {
            width: 100%;
            height: auto;
        }

        .banner-holder 
        {
            position: relative;
        }
        
        .banner-holder > div:nth-child(2)
        {
            position: absolute;
            display: flex;
            flex-direction: row;
            bottom: .5rem;
            right: 50%;
            transform: translateX(50%);
            align-items: center;
        }

        .banner-holder > div:nth-child(2) span
        {
            width: .5rem;
            height: .5rem;
            margin: 0 .1rem;
            border: 1px solid rgba(255, 255, 255, .25);
            border-radius: 100%;
        }

        .banner-holder > div:nth-child(2) span.big
        {
            background-color: rgba(255, 255, 255, .25);
        }









        .flavors-section
        {
            width: 100%;
            display: grid;
            grid-template-columns: repeat(8, calc(100% / 8));
            margin-top: 1rem;
        }

        .flavors-section img
        {
            width: 100%;
            height: auto;
            border-radius: 8%;
        }

        .flavors-section a
        {
            text-decoration: none;
            color: white;
            position: relative;
            padding: .5rem;
        }

        .flavors-section span
        {
            position: absolute;
            bottom: 1rem;
            left: 1rem;
            font-weight: 600;
           
        }

        @media only screen and (max-width: 600px) 
        {
            .flavors-section
            {
                grid-template-columns: repeat(8, calc(200% / 8));
                overflow: auto;
            }

            .flavors-section span
            {
                font-size: .5rem;
            }
        }





        .most-ordered-section
        {
            width: calc(100% - 1rem);
            margin-top: 1rem;
            padding: 0 .5rem;
        }

        .most-ordered-section h3
        {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>
