        .banner
        {
            position: relative;
            display: flex;
            overflow: hidden;
        }

        .banner > img
        {
            width: 100%;
            height: auto;
        }

        .banner-holder 
        {
            position: relative;
        }
        
        .banner-holder > div:nth-child(2)
        {
            position: absolute;
            display: flex;
            flex-direction: row;
            bottom: .5rem;
            right: 50%;
            transform: translateX(50%);
            align-items: center;
        }

        .banner-holder > div:nth-child(2) span
        {
            width: .5rem;
            height: .5rem;
            margin: 0 .1rem;
            border: 1px solid rgba(255, 255, 255, .25);
            border-radius: 100%;
        }

        .banner-holder > div:nth-child(2) span.big
        {
            background-color: rgba(255, 255, 255, .25);
        }









        .flavors-section
        {
            width: 100%;
            display: grid;
            grid-template-columns: repeat(8, calc(100% / 8));
            margin-top: 1rem;
        }

        .flavors-section img
        {
            width: 100%;
            height: auto;
            border-radius: 8%;
        }

        .flavors-section a
        {
            text-decoration: none;
            color: white;
            position: relative;
            padding: .5rem;
        }

        .flavors-section span
        {
            position: absolute;
            bottom: 1rem;
            left: 1rem;
            font-weight: 600;
           
        }

        @media only screen and (max-width: 600px) 
        {
            .flavors-section
            {
                grid-template-columns: repeat(8, calc(200% / 8));
                overflow: auto;
            }

            .flavors-section span
            {
                font-size: .5rem;
            }
        }





        .most-ordered-section
        {
            width: calc(100% - 1rem);
            margin-top: 1rem;
            padding: 0 .5rem;
        }

        .most-ordered-section > h3
        {
            font-family: 'Montserrat', sans-serif;
            margin-bottom: 1rem;
        }

        .most-ordered-section > div
        {
            width: calc(100% - (3 * .5rem));
            display: grid;
            gap: .5rem;
            grid-template-columns: repeat(4, calc(100% / 4));
        }

        .product-card
        {
            background-color: white;
            padding: .5rem;
            border-radius: .4rem;
            box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.3);
            height: 24rem;
            display: flex;
            flex-direction: column;
        }
        
        .product-card img
        {
            width: 100%;
            height: auto;
            border-radius: .4rem;
        }

        .product-card > h3
        {
            font-size: 1rem;
            font-weight: 600;
            margin-top: .5rem;
            font-family: 'Montserrat', sans-serif;
        }

        .product-card > div
        {
            display: flex;
            align-items: center;
            
        }

        .product-card > div h3
        {
            font-size: 1rem;
            font-weight: 900;
            font-family: 'Montserrat', sans-serif;
        }

        .product-card > div > h3:nth-child(1)
        {
            font-size: 1.4rem;
            padding-right: .5rem;
        }

        .product-card > div > h3:nth-child(2)
        {
            color: rgb(87, 87, 87);
            text-decoration: line-through;
        }

        .product-card > div:nth-child(3)
        {
            margin-top: .5rem;
            display: flex;
            align-items:end;
            height: 100%;
        }

        .product-card > div:nth-child(4)
