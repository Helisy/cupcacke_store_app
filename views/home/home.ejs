        }

        .product-card > div > button
        {
            background-color: black;
            color: white;
            border-radius: .4rem;
            padding: .5rem;
            border: none;
            outline: none;
            width: 100%;
            font-size: 1.5rem;
            font-weight: 600;
            cursor: pointer;
        }


        @media only screen and (max-width: 600px) 
